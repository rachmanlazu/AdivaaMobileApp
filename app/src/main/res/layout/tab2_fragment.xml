<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_produk"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/adivaalogo" />

        <TextView
            android:id="@+id/informasiTgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_produk"
            android:paddingLeft="10dp"
            android:text="Tanggal    :"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/tglPembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/informasiTgl"
            android:text="11"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/bulanPeriksa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tglPembelian"
            android:text="03"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/tahunPeriksa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bulanPeriksa"
            android:text="19"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/informasiProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tglPembelian"
            android:layout_toRightOf="@id/img_produk"
            android:paddingLeft="10dp"
            android:text="Produk      :"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/namaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/informasiTgl"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/informasiProduk"
            android:text="Adivaa Sunscreen"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/informasiJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaProduk"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/img_produk"
            android:paddingLeft="10dp"
            android:text="Jumlah     :"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/jumlahProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaProduk"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/informasiProduk"
            android:text="1"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</LinearLayout>